    <script>
        function calcularCalificacion() {
            let respuestas = {a: 0, b: 0, c: 0, d: 0};
            let total = 0;
            document.querySelectorAll('input[type="radio"]:checked').forEach(function(radio) {
                let valor = parseInt(radio.value);
                if (valor === 3) respuestas.a++;
                else if (valor === 2) respuestas.b++;
                else if (valor === 1) respuestas.c++;
                else if (valor === 0) respuestas.d++;
                total += valor;
            });

            document.getElementById('cantidad_a').textContent = respuestas.a;
            document.getElementById('cantidad_b').textContent = respuestas.b;
            document.getElementById('cantidad_c').textContent = respuestas.c;
            document.getElementById('cantidad_d').textContent = respuestas.d;

            document.getElementById('puntaje_a').textContent = respuestas.a * 3;
            document.getElementById('puntaje_b').textContent = respuestas.b * 2;
            document.getElementById('puntaje_c').textContent = respuestas.c * 1;
            document.getElementById('puntaje_d').textContent = respuestas.d * 0;

            document.getElementById('puntaje_total').textContent = total;

            let calificacion = calcularNota(total);
            document.getElementById('calificacion_final').textContent = calificacion.toFixed(1);
        }

        function calcularNota(puntaje) {
            if (puntaje >= 29) {
                return 4.0 + (puntaje - 29) * (3 / 19);
            } else {
                return 1.0 + (puntaje - 1) * (3 / 28);
            }
        }
    </script>
